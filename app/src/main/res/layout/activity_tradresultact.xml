<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tradresultact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imagetrad"
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/watermelon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tradname"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:text="helooooo"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tradprice"
        android:paddingLeft="15dp"
        android:text="helooooo"
        android:layout_marginBottom="20dp"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/traddel"
        android:paddingLeft="15dp"
        android:text="Delievery: Delievery will be within three to four days"
        android:layout_marginBottom="20dp"
        android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/traddel12"
            android:paddingLeft="15dp"
            android:text="Review from Customer : The Product is directly camed from farmer side for the purchase. The Product is safe enough to consumes for customer. "
            android:layout_marginBottom="80dp"
            android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/buynow123"
        android:text="Buy now"/>

    </LinearLayout>

</ScrollView>