<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".farmresultintrad">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26sp"
        android:text="Purchase from Farmer"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textAlignment="center" />


    <ImageView

        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/krushivo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropnamere"
       android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="Cropname"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropquantityre"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="Quantity"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/croppricre"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="Price"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/croptotalpricere"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="T price"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropfarnamere"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="Farmer name"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropemailre"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="Email"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropphonere"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="Phone"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropstatere"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="State"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropdistrictre"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="District"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paytn"
        android:text="Pay"
        android:layout_gravity="center"
        android:textStyle="bold"/>



</LinearLayout>
</ScrollView>